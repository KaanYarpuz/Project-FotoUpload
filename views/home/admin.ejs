<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="viewport"
        content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="manifest" href="/manifest.webmanifest">
    <link rel="stylesheet" href="/stylesheets/index.css">
    <script src="/javascripts/logout.js" defer></script>
    <title>Home Page</title>
</head>

<body class=" fixed w-full h-full p-5">
    <div class=" h-full grid gap-2 grid-cols-1 grid-rows-[1fr,15fr,1.6fr]">
        <nav class=" border-b-2 pb-2 border-gray-200 ">
            <div class=" flex w-full gap-2 justify-between items-center">
                <div>
                    <p class="text-lg font-medium">Admin - evenementen</p>
                </div>
                <button id="logout" class="bg-black text-white px-4 py-1 rounded-md ">uitloggen</button>
            </div>
        </nav>
        <main class="overflow-auto rounded-xl scroll-smooth">
            <div
                class="snap-x snap-start snap-mandatory overflow-auto scroll-snap-type-y-mandatory flex flex-col gap-2">

                <% DataEvent.forEach(function(event) { %>
                    <div class=" p-2 bg-gray-50 w-full border-2 border-gray-200 rounded-xl ">
                        <div class=" flex items-start gap-5">
                            <img src="<%= event.image %>" alt="Event"
                                class="h-[4.8rem] w-[4.8rem] object-cover rounded-lg" />
                            <div>
                                <p class="text-lg font-medium">
                                    <%= event.title %>
                                </p>
                                <p class="text-sm -mt-2 mb-2">
                                    <%= event.description %>
                                </p>
                                <div class=" flex items-center gap-2">
                                    <button id="eventcode" class="bg-green-500 text-white px-4 py-1 select-text text-sm rounded-md ">
                                        <%= event.eventcode %>
                                    </button>
                                    <button class="bg-red-500 text-white px-4 py-1 text-sm rounded-md delete-btn"
                                        data-event-id="<%= event._id %>">
                                        Delete
                                    </button>
                                    <div onclick="data()" data-event-id="<%= URL %>/login/<%= event._id %>" id="share"
                                        class="bg-gray-200 text-neutral-800 px-4 py-1 flex items-center justify-center text-sm rounded-md ">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                                            viewBox="0 0 24 24">
                                            <path fill="currentColor"
                                                d="M8 13v-1h7v1zm7.5-6a5.5 5.5 0 0 1 5.5 5.5a5.5 5.5 0 0 1-5.5 5.5H13v-1h2.5c2.5 0 4.5-2 4.5-4.5S18 8 15.5 8H13V7zm-8 11A5.5 5.5 0 0 1 2 12.5A5.5 5.5 0 0 1 7.5 7H10v1H7.5C5 8 3 10 3 12.5S5 17 7.5 17H10v1z" />
                                        </svg>
                                    </a>

                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
        </main>
        <footer class=" bottom-5 sticky border-t-2 pt-2 border-gray-200">
            <div class="flex justify-evenly items-center">
                <a href="/" class="flex opacity-50 hover:opacity-50 flex-col items-center justify-center">
                    <svg class=" w-10 h-10" xmlns="http://www.w3.org/2000/svg" width="32" height="32"
                        viewBox="0 0 24 24">
                        <path fill="currentColor"
                            d="M7 2h1a1 1 0 0 1 1 1v1h5V3a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v1a3 3 0 0 1 3 3v11a3 3 0 0 1-3 3H6a3 3 0 0 1-3-3V7a3 3 0 0 1 3-3V3a1 1 0 0 1 1-1m8 2h1V3h-1zM8 4V3H7v1zM6 5a2 2 0 0 0-2 2v1h15V7a2 2 0 0 0-2-2zM4 18a2 2 0 0 0 2 2h11a2 2 0 0 0 2-2V9H4zm8-5h5v5h-5zm1 1v3h3v-3z" />
                    </svg>
                    <p class="text-sm font-medium">Evementen</p>
                </a>
                <a href="/upload" class="flex opacity-30 hover:opacity-50 flex-col items-center justify-center">
                    <svg class=" w-10 h-10" xmlns="http://www.w3.org/2000/svg" width="32" height="32"
                        viewBox="0 0 24 24">
                        <path fill="currentColor"
                            d="M11 2.5L20 7v2H2V7zm4 7.5h4v8h-4zM2 22v-3h18v3zm7-12h4v8H9zm-6 0h4v8H3zm0 10v1h16v-1zm1-9v6h2v-6zm6 0v6h2v-6zm6 0v6h2v-6zM3 8h16v-.4l-8-4.02L3 7.6z" />
                    </svg>
                    <p class="text-sm font-medium">Aanmaken</p>
                </a>
            </div>
        </footer>
    </div>

    <script src="/javascripts/deleteEvent.js"></script>
</body>

</html>